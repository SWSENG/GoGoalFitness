<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AboutUsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/upperPage"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@drawable/dashboard_bg"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="220dp"
            android:layout_height="71dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="205dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal"
            android:text="ABOUT US"
            android:textColor="@color/splashScreenYellow"
            android:textSize="40sp"
            android:paddingStart="15dp"/>

        <ImageButton
            android:id="@+id/btnBackAboutUs"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/dashboardRed"
            app:srcCompat="@drawable/abc_vector_test" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="60dp"
        android:orientation="horizontal"
        android:paddingTop="100dp"/>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/upperPage"
        android:src="@drawable/facebook"/>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/upperPage"
        android:layout_toEndOf="@id/facebook"
        android:layout_toRightOf="@id/facebook"
        android:text="Follow Our Facebook Page"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/facebook"
        android:src="@drawable/insta"/>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/facebook"
        android:layout_toEndOf="@id/email"
        android:layout_toRightOf="@id/email"
        android:text="Follow Our Instagram"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/phone"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/email"
        android:src="@drawable/twitter"/>

    <TextView
        android:id="@+id/phone_no_text"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_below="@id/email"
        android:layout_toEndOf="@id/phone"
        android:layout_toRightOf="@id/phone"
        android:text="Follow Our Twitter"
        android:textSize="25sp"/>

    <Space
        android:id="@+id/spacer1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/phone" />

    <TextView
        android:id="@+id/aboutUs_text"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@+id/spacer1"
        android:gravity="center"
        android:text="Hello World"
        android:textSize="15sp" />


</RelativeLayout>